<h1>Edit Habit</h1>

<form action="/habits/<%= @habit.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">    

    <label for="name">Habit Name: </label>
    <input type="text" name="name" id="name" value="<%= @habit.name %>"><br><br>

    <label for="date">Date Started: </label>
    <input type="text" name="date" id="date" value="<%= @habit.date %>"><br><br>

    <label for="description">Habit Description: </label>
    <input type="text" name="description" id="description" value="<%= @habit.description %>"><br><br>

    <input type="submit" value="Update Habit">
</form>

#back #logoutbutton
